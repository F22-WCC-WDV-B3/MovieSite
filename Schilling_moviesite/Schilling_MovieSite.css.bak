} 

h1 { text-align: center;
	color: #221FDE;
	background-color: #EC152F 
	} 
	
body { background-color: #08EDE3; 
	text-align: center;
	background-image: url(freeguyimage1.jpg); 
	} 
	
header { text-align: center 
} 

p { font-weight: bold 
} 
	
h3 { color: #221FDE 
} 

footer { text-align: center;
font-style: italic;
border-top: solid; 
} 

footer a, nav a { text-decoration: none; 
} 

nav a { color: #ff0000 
} 

button { background-color: #EC152F;
		color: #221FDE 
		} 

.all { width: 80%; 
	margin-right: auto;
	margin-left: auto;
	background-color: #11BDF2;
	min-width: 900px;
	max-width: 1280px;
	box-shadow: drop-shadow; 
	} 
	
.story { font-size: 1.5em; 
		word-spacing: .25em; 
		} 
.smalltext { font-size: .1em; 
} 

.tony { background-image: url(gizmoisshort.jfif) 
} 

.homebody { font-size: 2em 
} 

.character { background-color: #FFFFFF; 
} 
.push { width: 20%
}

#wrapper { grid-template-columns: 1fr 160px;
		grid-template-rows: 200px auto auto 100px; 
}

#ihateyou { width: 50% } 

header { grid-row: 1/2;
		grid-column: 1/3;
}

nav { grid-row: 2/3;
		grid-column: 1/3;
		
}

aside { grid-row: 3/4;
		grid-column: 2/3;
		float: right;
		width: 50%;
		margin-right: 10px;
}


footer { grid-row: 4/5;
		grid-column: 1/3;
}





