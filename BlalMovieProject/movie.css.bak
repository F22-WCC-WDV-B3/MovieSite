body { background-color: #FCEBB6;
		color: #191970;
		font-family: Arial, Verdana, sans-serif;
		background-image: url(background.gif); }
h1	 { background-color: #D2B48C; 
		color: #221811; 
		line-height: 200%;
		font-family: Verdana, "Times New Roman", serif;
		background-image: url(baticon.ico);
		background-repeat: no-repeat;
		padding-top: 120px;
		text-align: center;
		font-size: 3em;
		grid-row: 1 / 2;
		grid-column: 1 / 4;}
}

aside { grid-row: 2 / 3;
		grid-column: 3 / 4; 
}
nav { 	text-align: center;
		font-weight: bold;
		font-size: 1.5em; padding-top: 0px;
		grid-row: 2 / 3;
		grid-column: 1 / 2; }
h2 {  	color: #221811; 
		font-family: Verdana, "Times New Roman", serif;}
footer {background-color: #D2B48C;
		font-size: .60em;
		font-style: italic; 
		text-align: center; }
.wrapper {
	width: 80%;
	margin-right:auto;
	margin-left:auto; 
	background-color: #FEF6C2;
	min-width: 600px;
	max-width: 1280px;
	box-shadow: 3px 3px; 
	color: #666;
	display: grid;
	grid-template-columns: 160px 1fr 160px;
	grid-template-rows: 200px auto 100px;	}
nav a { text-decoration: none; }
main { padding: 0px 2em 2em 2em; 
	   display: block;
	   grid-row: 2 / 3;
	   grid-column: 2 / 3; }
.details { padding-left: 20%;
		   padding-right: 20%; }
img { padding-left: 10px;
	  padding-right: 10px; }
	  